<h3>スケジュール一覧</h3>
<table>
  <thead>
    <td>ID</td>
    <td>タイトル</td>
    <td>開始日</td>
    <td>終了日</td>
    <td>終日</td>
    <td>スケジュール更新日時</td>
    <td>確認</td>
    <td>編集</td>
    <td>削除</td>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id%></td>
        <td><%= post.title%></td>
        <td><%= post.start_date%></td>
        <td><%= post.end_date%></td>
        <% if post.all_day == true %>
          <td>◯</td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= post.updated_at.strftime("%Y-%m-%d(%a)%H:%M")%></td>
        <td><%= link_to "確認", post_path(post)%></td>
        <td><%= link_to "編集", edit_post_path(post)%></td>
        <td><%= link_to "削除", post_path(post), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "スケジュール新規登録", new_post_url%>